    <section id="cart_items">
        <div class="container">
            <div class="breadcrumbs">
                <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li class="active">Shopping Cart</li>
                </ol>
            </div>
            <div class="table-responsive cart_info">
                <table class="table table-condensed">
                    <thead>
                        <tr class="cart_menu">
                            <td class="image">Item</td>
                            <td class="description"></td>
                            <td class="price">Price</td>
                            <td class="quantity">Quantity</td>
                            <td class="total">Total</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model._listItem.Count > 0)
                        {
                            foreach (var item in Model._listItem)
                            {
                                <tr>
                                    <td class="cart_product">
                                        <a href=""><img src="@Url.Content("~/Content/images/AnhSanPham/" + item._product.Image)" alt="" width="100"></a>
                                    </td>
                                    <td class="cart_description">
                                        <h4><a href="">@item._product.Name</a></h4>
                                        <p>Mã Sản Phẩm: @item._product.ID</p>
                                    </td>
                                    <td class="cart_price">
                                        <p>@item._product.Price</p>
                                    </td>
                                    <td class="cart_quantity">
                                        <div class="cart_quantity_button">

                                            <input class="txtcart_quantity_input" type="text" readonly="readonly" name="txtSoLuong" value="@item._quantity" autocomplete="off" size="2" />

                                        </div>
                                    </td>


                                    <td class="cart_total">
                                        @{ var a = item.ThanhTien();}
                                        <p class="cart_total_price">@string.Format("{0:0,0}", a) VNĐ</p>
                                    </td>
                                    <td class="cart_delete">
                                        <a class="cart_quantity_delete" href="@Url.Action("RemoveItem","ShoppingCart",new { @ProductID=item._product.ID})"><i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                                                }
                                            }
                    </tbody>
                </table>

                @*<button id="btnContinue" class="btn">Tiếp tục mua hàng </button>*@
                <a href="@Url.Action("Index","Home",new { area=""})"><span class="btn btn-success">Tiếp tục mua hàng</span> </a>
                <a href="@Url.Action("SuaGioHang","ShoppingCart")"><span class="btn btn-success">Chỉnh sửa giỏ hàng</span> </a>

            </div>
            @using (Html.BeginForm("DatHang","ShoppingCart",FormMethod.Post))
            {
             
                <div class="table-responsive cart_info">
                    <table class="table table-condensed">
                        <thead>
                            <tr class="cart_menu">
                                <td class="image">Thông tin khách hàng nhận </td>
                                <td></td>
                               
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td class="cart_product">Tên người nhận: </td>
                                <td class="cart_description col-sm-10"><input type="text" class="form-control" placeholder="Enter ShipName" name="txtShipName" required /></td>
                               
                            </tr>
                            <tr>
                                <td class="cart_product">Địa chỉ người nhận: </td>
                                <td class="cart_description"><input type="text" class="form-control" placeholder="Enter ShipAddress" name="txtShipAddress"  required/></td>

                            </tr>
                            <tr>
                                <td class="cart_product"><lable class="ui-controlgroup-label">Số điện thoại người nhận: </lable></td>
                                <td class="cart_description"><input type="text" class="form-control" placeholder="Enter ShipMobile" name="txtShipMobile" required pattern="\d*" maxlength="15"   /></td>

                            </tr>

                        </tbody>
                    </table>
                    <button type="submit" class="btn btn-success">Thanh toán đặt hàng</button>
                </div>
            }
        </div>
