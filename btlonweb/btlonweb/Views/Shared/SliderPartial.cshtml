@using Model.EF
@model IEnumerable<Product>
<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        @for (int index = 0; index < Model.Count(); index++)
                        {
                            if (index == 0)
                            {
                                <div class="item active">
                                    <div class="col-sm-6">
                                        <h1><span>E</span>-SHOPPER</h1>
                                        <h2>@Model.ElementAt(index).Name</h2>
                                        <p>@Model.ElementAt(index).Description</p>
                                        <a class="btn btn-primary" href="@Url.Action("ProductDetail","Home", new { @ProductID = Model.ElementAt(index).ID,@CategoryID = Model.ElementAt(index).CategoryID})">Xem ngay</a>
                                    </div>
                                    <div class="col-sm-6">
                                        <img src="@Url.Content("~/Content/images/AnhSanPham/"+Model.ElementAt(index).Image)" class="girl img-responsive" alt="" />
                                        <img src="~/Assets/Client/images/home/pricing.png" class="pricing" alt="" />
                                    </div>
                                </div>
                            }
                            if (index == 1)
                            {
                                <div class="item">
                                    <div class="col-sm-6">
                                        <h1><span>E</span>-SHOPPER</h1>
                                        <h2>@Model.ElementAt(index).Name</h2>
                                        <p>@Model.ElementAt(index).Description</p>
                                        <a class="btn btn-primary" href="@Url.Action("ProductDetail","Home", new { @ProductID = Model.ElementAt(index).ID,@CategoryID = Model.ElementAt(index).CategoryID})">Xem ngay</a>
                                    </div>
                                    <div class="col-sm-6">
                                        <img src="@Url.Content("~/Content/images/AnhSanPham/"+Model.ElementAt(index).Image)" class="girl img-responsive" alt="" />
                                        <img src="~/Assets/Client/images/home/pricing.png" class="pricing" alt="" />
                                    </div>
                                </div>
                            }
                            if (index == 2)
                            {
                                <div class="item">
                                    <div class="col-sm-6">
                                        <h1><span>E</span>-SHOPPER</h1>
                                        <h2>@Model.ElementAt(index).Name</h2>
                                        <p>@Model.ElementAt(index).Description</p>
                                        <a class="btn btn-primary" href="@Url.Action("ProductDetail","Home", new { @ProductID = Model.ElementAt(index).ID,@CategoryID = Model.ElementAt(index).CategoryID})">Xem ngay</a>
                                    </div>
                                    <div class="col-sm-6">
                                        <img src="@Url.Content("~/Content/images/AnhSanPham/"+Model.ElementAt(index).Image)" class="girl img-responsive" alt="" />
                                        <img src="~/Assets/Client/images/home/pricing.png" class="pricing" alt="" />
                                    </div>
                                </div>
                            }

                        }




                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>
